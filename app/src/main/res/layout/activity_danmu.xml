<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.danmu.newdanmu.DanMuParentView
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <com.example.danmu.danmu.widget.DMSurfaceView
            android:id="@+id/dmView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:dm_direction="right_left"
            app:dm_span="2dp"
            app:dm_v_space="8dp"
            app:dm_h_space="16dp"
            app:dm_span_time="16" />
    </com.example.danmu.newdanmu.DanMuParentView>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickAdd5NoOver"
        android:text="轮询的加5个弹幕"/>

    <com.example.danmu.newdanmu.DanMuParentView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.danmu.newdanmu.DanMuView
            android:id="@+id/danmaku_container_room"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>

    </com.example.danmu.newdanmu.DanMuParentView>

</LinearLayout>
