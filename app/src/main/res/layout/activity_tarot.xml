<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tarotview.TarotActivity">
    <Button
        android:id="@+id/btn_wash"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="洗牌"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/tarot1"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/black"/>
    <ImageView
        android:id="@+id/tarot2"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp_10"

        android:background="@color/red"/>
    <ImageView
        android:id="@+id/tarot3"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/blue"/>
    <ImageView
        android:id="@+id/iv_move"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:src="@mipmap/tarot"
        android:visibility="gone"
        tools:visibility="visible"
        />
    <liyihuan.app.android.androidpractice.tarotview.TarotView
        android:id="@+id/tarotview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />



</LinearLayout>